node {
    withEnv([
        "AWS_ACCESS_KEY_ID=${string(credentialsId: 'access_key', variable: 'access_key')}",
        "AWS_SECRET_ACCESS_KEY=${string(credentialsId: 'access_secret_key', variable: 'access_secret_key')}"
    ]) {
        checkout()
        init()
        lint()
        plan()
    }
}

def checkout() {
    stage('Clone') {
        // git branch: 'master', url: 'https://github.com/ductnn/Simple-Terraform-EC2.git'
        checkout scm
    }
}

def init() {
    stage('Init') {
        dir ("dev") {
            sh 'ls && whoami'
            sh 'terraform init'
        }
    }
}

def lint() {
    stage('Lint') {
        dir ("dev") {
            sh 'terraform fmt'
            sh 'terraform validate'
        }
    }
}

def plan() {
    stage('Plan') {
        dir ("dev") {
            sh 'terraform plan'
        }
    }
}
